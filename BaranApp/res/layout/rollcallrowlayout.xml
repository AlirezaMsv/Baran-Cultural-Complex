<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_margin="5dp"
    android:layout_height="150dp">
    <Button
        android:layout_width="60dp"
        android:visibility="gone"
        android:text="@string/done"
        android:gravity="center"
        android:textSize="18sp"
        style="@style/edstyle"
        android:id="@+id/rollcalldonerow"
        android:background="@color/yellow"
        android:layout_height="60dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/rgrollcall"
        android:weightSum="2"
        style="@style/edstyle"
        android:layout_weight="1">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/present"
            android:id="@+id/rowpresent"
            android:drawableBottom="@android:drawable/btn_radio"
            android:drawableTint="@color/greenmeeting"
            android:drawablePadding="0dp"
            android:button="@null"
            android:layout_height="80dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/rowappsent"
            android:drawableBottom="@android:drawable/btn_radio"
            android:drawableTint="@color/redmeeting"
            android:drawablePadding="0dp"
            android:button="@null"
            android:layout_gravity="center"
            android:text="@string/appsent"
            android:layout_weight="1"
            android:layout_height="80dp"/>

    </RadioGroup>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="18sp"
        android:hint="@string/namehint"
        style="@style/edstyle"
        android:id="@+id/txtcallrollrow"/>
    <ImageView
        android:layout_width="0dp"
        android:contentDescription="@string/profile"
        android:layout_weight="1"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:id="@+id/imgprofilerollcallrow"
        android:layout_height="match_parent"/>
</LinearLayout>